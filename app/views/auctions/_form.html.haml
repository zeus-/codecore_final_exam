= form_for @auction do |f|
  .form-field 
    = f.label :title 
    = f.text_field :title, class: 'form-control' 
  .form-field
    = f.label :details 
    = f.text_field :details, class: 'form-control' 
  .form-field
    = f.label :ends_on 
    %br
    %p
    = f.datetime_select :ends_on, class: 'form-control' 
    %br
    %br
  .form-field
    = f.label :reserve_price
    = f.number_field :reserve_price, class: 'form-control' 
  = f.submit (@auction.persisted? ? "Update" : "Save"), class: "btn btn-default"

